<div class="card">
    <div class="card-body">
        <div class="card-subtitle d-flex justify-content-between">
            <div class="mb-2 text-muted">
                {{ account.name }}
            </div>
            <a href="{{ path('app_account', { account: account.id }) }}">
                <i class="fe fe-eye" title="View"></i>
            </a>
        </div>
        <div class="card-title fs-4">{{ account.balance | format_currency('EUR') }}</div>
        <div class="d-flex justify-content-between fs-6">
            <div class="text-success">{{ account.incomeSum | format_currency('EUR') }}</div>
            <div class="text-danger">{{ account.expenseSum | format_currency('EUR') }}</div>
        </div>
    </div>
</div>
